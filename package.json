{
  "name": "backlog",
  "version": "1.0.0",
  "description": "Unofficial Backlog Client for Desktop",
  "main": "build/main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc",
    "dev": "tsc && electron .",
    "gen": "tsc && electron-builder --dir"
  },
  "build": {
    "appId": "net.siraken.backlog-cli",
    "files": [
      "package.json",
      "build/main.js"
    ],
    "mac": {
      "target": {
        "target": "dir",
        "arch": "universal"
      },
      "icon": "assets/backlog.png"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/backlog.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "author": "SiraKen.NET",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^14.14.41",
    "electron": "^12.0.1",
    "electron-builder": "^22.10.5",
    "typescript": "^4.2.4"
  }
}
